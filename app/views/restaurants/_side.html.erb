<div class="search">
  <%= form_with url: search_restaurants_path, method: :get, local: true do |f| %>
    <%= f.text_field :name, placeholder: "お店名を入力", class: 'form-control' %>
    <%= f.text_field :freeword1, placeholder: "キーワード（ジャンルなど）", class: 'form-control' %>
    <%= f.text_field :freeword2, placeholder: "キーワード（場所など）", class: 'form-control' %>
    <%= f.submit "検索", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h5 class="panel-title">タグ一覧</h5>
  </div>
  <div class="tag panel-body">
    <% tag_cloud(tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
      <%= link_to tag.name, tag_cloud_restaurants_path(:tag_name => tag.name), :class => css_class %>
    <% end %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h5 class="panel-title">ランキング</h5>
  </div>
  <div class="panel-body">
    <h5><%= link_to '行ってみたいランキング', wants_path %></h5><br>
    <h5><%= link_to 'また行きたいランキング', repeats_path %></h5>
  </div>
</div>
