<% content_for(:html_title) { "タグリンク" } %>

<div class="col-md-6 col-md-offset-3">
  <div class='row'>
    <% @restaurants.each do |t| %>
      <div class="col-xs-6 image_adjust">
        <li><%= t.name %></li>
        <%= link_to '詳細はこちら',restaurant_path(t.shop_id) %>
      </div>
      <div class="col-xs-6 image_adjust">
        <li><%= image_tag t.image , class: 'img-responsive center-block' %></li>
      </div>
    <% end %>
  </div>
</div>