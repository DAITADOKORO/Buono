<% if restaurant.repeated_by?(current_user) %>
  <%= link_to restaurant_repeats_path(restaurant), method: :delete, remote: true do %>
    <span class="glyphicon glyphicon-heart"></span>
    <%= restaurant.repeats.count %> いいね
  <% end %>
<% else %>
  <%= link_to restaurant_repeats_path(restaurant), method: :post,remote: true do %>
    <span class="glyphicon glyphicon-heart-empty"></span>
    <%= restaurant.repeats.count %> いいね
  <% end %>
<% end %>