<% if restaurant.repeated_by?(current_user) %>
  <%= link_to restaurant_repeats_path(restaurant), method: :delete, remote: true, class: 'btn btn-lg btn-warning' do %>
    また行きたい！
    <i class="fas fa-bookmark"></i>
    <%= restaurant.repeats.count %>
  <% end %>
<% else %>
  <%= link_to restaurant_repeats_path(restaurant), method: :post, remote: true, class: 'btn btn-lg btn-primary' do %>
    また行きたい！
    <i class="far fa-bookmark" ></i>
    <%= restaurant.repeats.count %>
  <% end %>
<% end %>