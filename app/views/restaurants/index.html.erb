<% content_for(:html_title) { "トップページ" } %>


<div class="col-md-10 col-md-offset-1">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_with url: search_restaurants_path, local: true do |f| %>
        <%= f.text_field :name, placeholder: "お店名を入力", class: 'form-control' %>
        <%= f.text_field :freeword1, placeholder: "キーワード", class: 'form-control' %>
        <%= f.text_field :freeword2, placeholder: "キーワード", class: 'form-control' %>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


<%= link_to 'ラーメン', search_restaurants_path %>