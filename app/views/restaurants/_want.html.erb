<% if restaurant.wanted_by?(current_user) %>
  <%= link_to restaurant_wants_path(restaurant), method: :delete, remote: true, class: 'btn btn-lg btn-warning' do %>
    行ってみたい！
        <i class="fas fa-bookmark"></i>
    <%= restaurant.wants.count %>
  <% end %>
<% else %>
  <%= link_to restaurant_wants_path(restaurant), method: :post, remote: true, class: 'btn btn-lg btn-primary' do %>
    行ってみたい！
    <i class="far fa-bookmark"></i>
    <%= restaurant.wants.count %>
  <% end %>
<% end %>
