<% if restaurant.wanted_by?(current_user) %>
  <%= link_to restaurant_wants_path(restaurant), method: :delete,remote: true do %>
    行ってみたい！
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
    <%= restaurant.wants.count %>
  <% end %>
<% else %>
  <%= link_to restaurant_wants_path(restaurant), method: :post, remote: true do %>
    行ってみたい！
    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
    <%= restaurant.wants.count %>
  <% end %>
<% end %>
