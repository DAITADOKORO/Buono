<% content_for(:html_title) { "会員詳細" } %>

<div class="container">
  <h1><strong>会員詳細画面</strong></h1>

  <h3>ユーザID       <%= @user.id %><strong>
    <% if @user.deleted_at.nil? %>
      <td>有効会員</td>
    <% else %>
      <td>無効会員</td>
    <% end %>
  </strong></h3>
  <h3>氏名       <%= @user.name %></h3>
  <h3>フリガナ    <%= @user.name_kana %></h3>
  <h3>メールアドレス    <%= @user.email %></h3>

  <%= link_to "編集する", edit_admin_user_path(@user), data: {"turbolinks" => false}, class: "btn btn-primary" %>
</div>