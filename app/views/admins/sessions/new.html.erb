<header class="admin-header">
  <diV class="container">
    <h3 class="nav navbar-nav navbar-left admin-logo"><%= link_to image_tag("logo.jpg", height: 80), admin_root_path %></h3>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "ユーザログインへ", new_user_session_path %></li>
    </ul>
  </diV>
</header>

<div class="container">
  <h3>ログイン</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label 'パスワード' %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログインする" %>
    </div>
  <% end %>
</div>
