<% content_for(:html_title) { "マイページ" } %>

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-1">
      <h1><strong>マイページ</strong></h1>
      <%= link_to "編集する", edit_user_path(@user), data: {"turbolinks" => false}, class: "btn btn-primary" %>
      <%= link_to "パスワードを変更する", edit_user_registration_path, class:"btn btn-primary" %>
      <table class="table table-responsive table-bordered">
        <tbody>
          <th>氏名</th>
          <th><%= @user.name %></th>
        </tbody>
        <tbody>
          <th>カナ</th>
          <th><%= @user.name_kana %></th>
        </tbody>
        <tbody>
          <th>メールアドレス</th>
          <th><%= @user.email %></th>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% @wants.first(2).each do |t| %>
  <li><%= t.restaurant.name %></li>
  <li><%= t.restaurant.genre %></li>
  <li><%= image_tag t.restaurant.image , class: 'img-responsive center-block' %></li>
  <%= link_to '詳細はこちら',restaurant_path(t.restaurant.shop_id) %>
<% end %>
<%= link_to 'もっと見る', user_wants_path(@user) %>


