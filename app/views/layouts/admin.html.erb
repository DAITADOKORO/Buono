<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:html_title) ? "Buono 管理者 #{yield(:html_title)}" : "Buono 管理者" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="admin-header">
      <diV class="container">
        <h3 class="nav navbar-nav navbar-left admin-logo"><%= link_to image_tag("logo.jpg", height: 80), admin_root_path %></h3>
        <ul class="nav navbar-nav navbar-right">
         <% if admin_signed_in? %>
          <li><%= link_to "あなたのお店", admin_admins_path %></li>
          <li><%= link_to "店鋪一覧", admin_restaurants_path %></li>
          <li><%= link_to "会員一覧", admin_users_path %></li>
          <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
         <% else %>
          <li><%= link_to "マップ" %></li>
          <li><%= link_to "ログイン", new_admin_session_path %></li>
        </ul>
      </diV>
    </header>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <%= message %>
      </div>
    <% end %>
    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>
    <div class="container">
        <footer>
          <p>©︎buono</p>
        </footer>
      </div>
  </body>
</html>
