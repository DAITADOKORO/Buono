<% content_for(:html_title) { "#{@restaurant.name} コメント" } %>
<div class="container">
  <h3><%= @restaurant.name %>   <i class="far fa-thumbs-up"></i><%= @score %></h3>
  <h3>みんなのコメント（<%= @restaurant.rest_comments.count %>件）</h3>
    <% @restaurant.rest_comments.each do |comment| %>
      <div class="balloon5">
        <div class="nameicon">
          <p><%= link_to comment.user.name, user_path(comment.user_id) %>さん</p>
        </div>
        <div class="chatting">
          <div class="says">
            <p><%= comment.comment %></p>
          </div>
        </div>
      </div>
      感情評価
        <% if comment&.score > 0 %>
          <a class="btn btn-danger"><strong><%= comment&.score %></strong></a>
        <% elsif comment&.score = 0 %>
          <a class="btn btn-default"><strong><%= comment&.score %></strong></a>
        <% else %>
          <a class="btn btn-info"><strong><%= comment&.score %></strong></a>
        <% end %>
    <% end %>
  <%= link_to '戻る',restaurant_path(@restaurant.shop_id), class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
</div>
